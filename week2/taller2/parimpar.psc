Algoritmo sin_titulo
	// crear un  algoritmo que lea un numero entero
	// determine si el numero es par o impar
	
	Definir number Como Entero
	
	escribir "ingresa un número entero";
	leer number;
	
	si (number % 2 == 0) Entonces
		
		imprimir "el número ", number, " es par";
	sino
		imprimir "el número ", number, " es impar";
		
	FinSi
	
FinAlgoritmo
